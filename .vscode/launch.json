    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Generate ETISS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/etiss_writer_coredsl.py",
            "console": "integratedTerminal",
            "args": [
                "gen_input/minres_rv.core_desc"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Parse CoreDSL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/parse_coredsl.py",
            "console": "integratedTerminal",
            "args": [
                "gen_input/minres_rv.core_desc"
            ],
            "stopOnEntry": true
        }
    ]
}