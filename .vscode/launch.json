{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Generate ETISS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/etiss_writer_coredsl.py",
            "console": "integratedTerminal",
            "args": [
                //"--separate",
                "${input:inputFile}"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Parse CoreDSL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/parse_coredsl.py",
            "console": "integratedTerminal",
            "args": [
                "-j0",
                "${input:inputFile}"
            ],
            "stopOnEntry": true
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "default": "gen_input/minres_rv.core_desc",
            "type": "pickString",
            "options": [
                "gen_input/riscv/minres_rv.core_desc",
                "gen_input/riscv/tum_rv.core_desc",
                "gen_input/armv6m/armv6m.core_desc"
            ],
            "description": ""
        }
    ]
}