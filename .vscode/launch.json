{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Generate ETISS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/etiss_writer.py",
            "console": "integratedTerminal",
            "args": [
                "--separate",
                "${input:inputFile}"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Generate Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "console": "integratedTerminal",
            "args": [
                //"--separate",
                "${input:inputFile}"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Generate Pickle",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pickle_writer.py",
            "console": "integratedTerminal",
            "args": [
                //"--separate",
                "${input:inputFile}"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Parse CoreDSL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/coredsl_parser.py",
            "console": "integratedTerminal",
            "args": [
                "-j1",
                "${input:inputFile}"
            ],
            "stopOnEntry": true
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "default": "../coredsl-models/riscv/tum_rv.core_desc",
            "type": "pickString",
            "options": [
                "../coredsl-models/riscv/minres_rv.core_desc",
                "../coredsl-models/riscv/tum_rv.core_desc",
                "../coredsl-models/armv6m/top.core_desc",
                "../coredsl-models/armv7m/top.core_desc"
            ],
            "description": ""
        }
    ]
}